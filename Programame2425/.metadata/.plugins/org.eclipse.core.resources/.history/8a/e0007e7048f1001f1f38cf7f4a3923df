package Easy;

import java.util.Scanner;

public class p239 {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		int tEmision = sc.nextInt();
		int emisoras = sc.nextInt();
		
		while (tEmision > 0 && emisoras > 0) {
			
			int placeholder = 0;
			int resultado = tEmision * 24 * 6 * emisoras;
			
			int segundos = resultado % 60;
			placeholder = resultado / 60;
			int minutos = placeholder % 60;
			placeholder = placeholder / 60;
			int horas = placeholder % 60;
			int dias = placeholder / 24;
			
			System.out.format("%d:%02d:%02d:%02d\n", dias,  horas, minutos, segundos);
			
			tEmision = sc.nextInt();
			emisoras = sc.nextInt();	
		}
	}
}
