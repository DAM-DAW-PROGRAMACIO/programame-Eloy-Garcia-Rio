package Easy;

import java.util.Scanner;

public class p239 {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		long tEmision = sc.nextInt();
		long emisoras = sc.nextInt();
		
		while (tEmision > 0 && emisoras > 0) {
			
			long placeholder = 0;
			long resultado = tEmision * 24 * 6 * emisoras;
			
			long segundos = resultado % 60;
			placeholder = resultado / 60;
			long minutos = placeholder % 60;
			placeholder = placeholder / 60;
			long horas = placeholder % 60;
			long dias = placeholder / 24;
			
			System.out.format("%d:%02d:%02d:%02d\n", dias,  horas, minutos, segundos);
			
			tEmision = sc.nextInt();
			emisoras = sc.nextInt();	
		}
	}
}
