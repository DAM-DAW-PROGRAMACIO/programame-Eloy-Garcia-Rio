package Easy;

import java.util.Scanner;

public class p462 {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		int casos = sc.nextInt();
		for (int i = 0; i < casos; i++){
			long placeholder = 0;
			long tLimpio = 0;
			long segundos = 0;
			long minutos = 0;
			long horas = 0;
			long dias = 0;
			long nVeces = sc.nextInt();
			String partes[] = sc.nextLine().split(":");
			
			tLimpio = (Integer.parseInt(partes[0].trim()) * 3600 + Integer.parseInt(partes[1]) * 60 + Integer.parseInt(partes[2])) * nVeces;
			
			segundos = tLimpio % 60;
			placeholder = tLimpio / 60;
			minutos = placeholder % 60;
			placeholder = placeholder / 60;
			horas = placeholder % 24;
			dias = placeholder / 24;
					
			if (i == 0) {
				System.out.format("%d %02d:%02d:%02d", dias,  horas, minutos, segundos);
			}
			else {
				System.out.format("\n%d %02d:%02d:%02d", dias,  horas, minutos, segundos);
			}
		}
		sc.close();
	}
}
