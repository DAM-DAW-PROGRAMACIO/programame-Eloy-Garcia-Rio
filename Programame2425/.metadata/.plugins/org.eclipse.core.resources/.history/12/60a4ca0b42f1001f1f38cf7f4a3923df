package Easy;

import java.util.Scanner;

public class p462 {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		int casos = sc.nextInt();
		for (int i = 0; i < casos; i++){
			int placeholder = 0;
			int tLimpio = 0;
			int segundos = 0;
			int minutos = 0;
			int horas = 0;
			int dias = 0;
			int nVeces = sc.nextInt();
			String partes[] = sc.nextLine().split(":");
			
			tLimpio = Integer.parseInt(partes[0].trim()) * 3600 + Integer.parseInt(partes[1]) * 60 + Integer.parseInt(partes[2]) * nVeces;
			
			segundos = tLimpio % 60;
			placeholder = tLimpio / 60;
			minutos = placeholder % 60;
			placeholder = placeholder / 60;
			horas = placeholder % 24;
			dias = placeholder / 24;
					
			System.out.format("%d %d02:%d02:%d02\n", dias,  horas, minutos, segundos);
		}
		sc.close();
	}
}
