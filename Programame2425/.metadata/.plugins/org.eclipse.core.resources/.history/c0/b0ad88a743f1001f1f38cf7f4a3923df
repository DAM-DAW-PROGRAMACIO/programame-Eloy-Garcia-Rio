package Easy;

import java.util.Scanner;

public class p000 {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		int casos = sc.nextInt();
		StringBuilder sb = new StringBuilder();
		while (casos > 0) {
			int placeholder = 0;
			int nVeces = sc.nextInt();
			String partes[] = sc.nextLine().split(":");
			
			int tLimpio = Integer.parseInt(partes[0].trim()) * 3600 + Integer.parseInt(partes[1]) * 60 + Integer.parseInt(partes[2]) * nVeces;
			
			int segundos = tLimpio % 60;
			placeholder = tLimpio / 60;
			int minutos = placeholder % 60;
			placeholder = placeholder / 60;
			int horas = placeholder % 24;
			int dias = placeholder / 24;

			sb.append(dias);
			sb.append(' ');
			sb.append(horas);
			sb.append(':');
			sb.append(minutos);
			sb.append(':');
			sb.append(segundos);
			String resultado = sb.toString();
					
			System.out.println(resultado);
			
			casos = sc.nextInt();
		}
	}
}
